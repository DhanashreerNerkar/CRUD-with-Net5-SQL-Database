@model IEnumerable<NetCoreApp2.Models.Category>

<div class="container" p-3>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2> 
        </div>
        <div class="col-6 text-right" >
            <a asp-controller="Category" asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> &nbsp; Create New Category
            </a>  
        </div>
    </div>
    <br/><br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>                   
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model){ 
                <tr>
                    <td width="60%">@obj.CategoryName</td>
                    <td   class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.CategoryId" class="btn btn-primary mx-2">
                                <i class="fas fa-pencil-alt"></i> &nbsp; Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.CategoryId" class="btn btn-danger mx-2">
                                <i class="fas fa-trash"></i> &nbsp; Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    { 
    <p>No Data</p>
    }
</div>

